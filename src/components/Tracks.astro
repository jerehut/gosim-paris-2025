---
// Components
import Button from "components/Button.astro"

interface Props {
	title: string,
    list?: Array<{
        title: string,
        text: string,
    }>,
    ctaButton: {
        text: string,
        link: string,
    }
}

const { title, list, ctaButton } = Astro.props;
---

<section
    class="section section-agenda-grid"
    id="grid"
    data-theme-section="light"
    data-bg-section="light"
    data-scroll-section
>
    <div class="container">
        <div class="row row-list accordion visible">
            <div class="list-group">

                <div class="row">
                    <div class="col col-title">
                        <h2>{title}</h2>
                    </div>
                </div>

                <ul class="row row-list">
                    {list?.map((loop, i) => (
                        <li
                            class="single-agenda-card single-accordion-item card-hover"
                            data-accordion-status="not-active"
                        >
                            <div class="top" data-accordion-toggle>
                                <div class="left">
                                    <div class="timeslot">
                                        <h5>{(i + 1).toString().padStart(3, '0')}</h5>
                                    </div>
                                    <h4>{loop.title}</h4>
                                </div>
                                <div class="plus">
                                    <div class="plus-fill"></div>
                                    <div class="bar bar-top"></div>
                                    <div class="bar bar-bottom"></div>
                                </div>
                            </div>
                            <div class="bottom">
                                <div class="bottom-wrap">
                                    <div class="bottom-content">
                                        <div class="card-row styled-content">
                                            <p>
                                                {loop.text}
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </li>
                    ))}
                </ul>

            </div>
        </div>

        <div class="row row-custom">
            <div class="col">
                <Button
                    text={ctaButton.text}
                    link={ctaButton.link}
                    class="btn outline btn-hover xl"
                />
            </div>
        </div>
    </div>
</section>
