---
interface Props {
	title: string,
    description: string,
    cards?: Array<{
        title: string,
        description: string,
        image: string,
    }>,
}

const { title, description, cards } = Astro.props;
---

<section
    class="section section-home-why"
    data-theme-section="light"
    data-bg-section="lightgray"
>
    <div class="container">
        <div class="row row-title grid">
            <div class="col col-title">
                <h2>{title}</h2>
            </div>

            <div class="col styled-content">
                <p>{description}</p>
            </div>
        </div>

        <div class="row row-audience grid">
            {cards?.map((loop) => (
                <div class="col why-reasons">
                    <img 
                        src={loop.image}
                        alt={loop.title}
                        width="48"
                        height="48"
                        loading="lazy"
                    />
                    <div class="why-content">
                        <h5>{loop.title}</h5>
                        <p>{loop.description}</p>
                    </div>
                </div>
            ))}
        </div>
    </div>
</section>
